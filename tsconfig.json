{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "jsx": "react",
    "baseUrl": "./packages",
    "inlineSourceMap": true
  },
  "include": ["./packages/**/*.tsx", "./packages/**/*.ts"],
  "exclude": ["**/node_modules/**", "./packages/**/dist", "./packages/_types"]
}
