{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "declaration": true,
    "jsx": "react",
    "outDir": "./dist/_types",
    "baseUrl": "./src",
    "inlineSourceMap": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["**/node_modules/**", "./dist"]
}
